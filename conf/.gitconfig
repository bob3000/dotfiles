[alias]
    diff = diff --word-diff
    mdiff = diff --diff-filter=CMRTUXB
    merge = merge --no-ff
    pull = pull --no-ff
    co = checkout
    st = status
    pf = push --force-with-lease
[core]
    quotepath = false
    autocrlf = input
    pager = delta
[diff]
    colorMoved = default
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
[color]
    diff = auto
    status = auto
    branch = auto
    ui = true
[push]
    default = tracking
[web]
    browser = open
[merge]
    conflictstyle = diff3
[include]
  path = ~/.gitconfig.local
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[gpg]
	program = gpg
